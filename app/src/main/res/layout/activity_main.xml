<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.newto.korsarze.MainActivity">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/witaj"
    android:src="@drawable/witaj"
    android:scaleType="center"
    android:layout_below="@+id/welcome"
    android:adjustViewBounds="true"

    android:maxHeight="200dp"

    android:layout_above="@+id/nowagra"
    android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj piracie"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:id="@+id/welcome"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nowa_gra"
        android:id="@+id/nowagra"

        android:layout_marginBottom="15dp"
        android:layout_above="@+id/ustawienia"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ustawienia"
        android:id="@+id/ustawienia"


        android:layout_marginBottom="15dp"
        android:layout_above="@+id/oautorach"
        android:layout_alignLeft="@+id/nowagra"
        android:layout_alignStart="@+id/nowagra" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oaplikacji"
        android:id="@+id/oautorach"

        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ustawienia"
        android:layout_alignStart="@+id/ustawienia"
        android:onClick="oaplikacji"/>

</RelativeLayout>
